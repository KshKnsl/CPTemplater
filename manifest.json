{
  "manifest_version": 3,
  "name": "CodeChef Template Paster",
  "version": "1.0",
  "description": "Automatically paste template code into CodeChef's code editor",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.codechef.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodeChef Template Paster"
  },
  "content_scripts": [
    {
      "matches": ["https://*.codechef.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
